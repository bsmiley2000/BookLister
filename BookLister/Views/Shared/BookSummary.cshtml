@{
}

@model Book

<div class="card card-outline-primary m-1">

    <div class="bg-faded p-1">

        <h4>@Model.Title</h4>

        <span class="badge bg-info" style="float:right; font-size:1.5rem;">
            Price: $@Model.Price
        </span>

    </div>

    <ul>
        <li>Author: @Model.Author</li>
        <li>Classification: @Model.Classification</li>
        <li>Category: @Model.Category</li>
        <li>Author: @Model.Author</li>
        <li>Pages: @Model.PageCount</li>
        <li>Publisher: @Model.Publisher</li>
        <li>ISBN: @Model.Isbn</li>
    </ul>


    <form method="post" asp-page="/Donate">

        <input type="hidden" asp-for="@Model.BookId" />
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />

        <span class="card-text">
            <button type="submit" class="btn btn-success btn-sm float-end">Donate</button>
        </span>

    </form>

</div>
